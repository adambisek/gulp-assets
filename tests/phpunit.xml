<phpunit
        colors="true"
        bootstrap="./bootstrap.php"
        >

    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>

        <blacklist>
            <directory>../tests</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="report-html" charset="UTF-8"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>